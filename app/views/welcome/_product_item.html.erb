

<li class="fl productList-item p15 pr">

  <p class="productList-item-name fb col-orange f18 mt10">
    <%= link_to product_path(product) do %>
       <%= truncate(product.title, :length => 8) %>
    <% end %>
  </p>

  <div class="productList-item-pic">
    <%= link_to product_path(product) do %>
    <p class="product-card"><%= truncate(product.description, :length => 80) %>
    <% end %>
  </p>

  <p class="productList-item-price fb col-orange f18 mt10">ï¿¥<%= product.price %></p>

    <%= link_to add_to_cart_product_path(product), :method => :post, class: "addCartBtn productList-item-cartBtn pa border f18", :remote => true do %>
      <i class="fa fa-shopping-cart col-orange"></i>
    <% end %>

</li>
